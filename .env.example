PORT=3000
DB_HOST=localhost
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=telemetry
DB_PORT=5432

# Health Check Thresholds & Alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services
THRESHOLD_QUESTIONS_MIN=1
THRESHOLD_FEEDBACK_MIN=1
THRESHOLD_ERRORS_MAX=10

# ============================================================
# GitHub Secrets for GCP Artifact Registry
# ============================================================
# Add these as GitHub ENVIRONMENT SECRETS (not Repository Secrets) in:
# Repository → Settings → Environments → Select Environment (bh-dev/bh-main) → Environment secrets → New secret
#
# Also add VITE_API_URL as an Environment Variable (if needed):
# Repository → Settings → Environments → Select Environment (bh-dev/bh-main) → Environment variables → New variable

# GCP Project Configuration (Add as SECRETS)
# These will be combined as: {GCP_REGION}-docker.pkg.dev/{GCP_PROJECT_ID}/{GCP_ARTIFACT_REPO}/{IMAGE_NAME}
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=asia-south1
GCP_ARTIFACT_REPO=your-artifact-repo-name

# Service Account Key (Add as SECRET - paste the entire JSON content)
GCP_SA_KEY={"type":"service_account","project_id":"...","private_key":"...","client_email":"..."}
